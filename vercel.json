{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1" 
    }
  ],
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build"
      }
    }
  ],
  "installCommand": "echo 'Installing Python dependencies...' && pip install -r backend/requirements.txt --no-warn-script-location && echo 'Python dependencies installed.' && echo 'Installing Node.js dependencies...' && npm install --prefix frontend && echo 'Node.js dependencies installed.'",
  "buildCommand": "npm run build --prefix frontend",
  "devCommand": "npm start --prefix frontend",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/index.py"
    },
    {
      "src": "/health",
      "dest": "backend/api/index.py"
    },
    {
      "src": "/", 
      "dest": "frontend/index.html" 
    },
    {
      "src": "/(.*)", 
      "dest": "frontend/$1" 
    }
  ],
  "env": {
    "DATABASE_URL": "@cram_school_database_url",
    "REACT_APP_BACKEND_API_URL": "/api"
  }
}