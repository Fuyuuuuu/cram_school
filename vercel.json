{
  "version": 2,
  "installCommand": "echo 'Starting Monorepo Install: Python & Node.js' && pip install -r backend/requirements.txt --no-warn-script-location && npm install --prefix frontend && echo 'Monorepo Install Completed.'",
  
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11", 
        "maxLambdaSize": "15mb" 
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build",
        "buildCommand": "npm run build --prefix frontend" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/index.py"
    },
    {
      "src": "/health",
      "dest": "/backend/api/index.py"
    },
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_BACKEND_API_URL": "/api"
  }
}